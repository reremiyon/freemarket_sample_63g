.signup-header
  .signup-header__logo
    = link_to image_tag("/fmarket_logo_red.svg",size: "200x120"), ""
  %nav.progress
    %ul.progress__bar
      %li.through#through
        会員情報
        .progress-status
        .progress-status_bar
      %li.active#active
        電話番号認証
        .progress-status
        .progress-status_bar
      %li.address#address
        お届け先住所入力
        .progress-status
        .progress-status_bar
      %li.payment#payment
        支払い方法
        .progress-status
        .progress-status_bar
      %li.end#end
        完了
        .progress-status
        .progress-status_bar
.signup-main
  .signup-contents
    .signup-contents-message 
      %b 住所入力
    .signup-contents-box
      .signup-contents-box-inner
        = form_with model: @user, class: :tel_class do |form| 
          .signup-contents-box-inner__field
            %b お名前  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）山田"
            = form.text_field :text, class: 'input-field', placeholder: "   例）彩"
          .signup-contents-box-inner__field
            %b お名前カナ 
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）ヤマダ"
            = form.text_field :text, class: 'input-field', placeholder: "   例）アヤ"
          .signup-contents-box-inner__field
            %b 郵便番号  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）123-4567"
          .signup-contents-box-inner__field
            %b 都道府県  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）北海道"
          .signup-contents-box-inner__field
            %b 市区町村  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）横浜市緑区"
          .signup-contents-box-inner__field
            %b 番地  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）青山1-1-1"
          .signup-contents-box-inner__field
            %b 建物名  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）柳ビル103"
          .signup-contents-box-inner__field
            %b 電話  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）09012345678"
          .signup-contents-box-inner__btn
            = form.submit "次へ進む", class: 'signup-contents-box-inner__btn--red'

= render partial: "shared/signup-footer"