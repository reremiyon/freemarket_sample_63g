.signup-header
  .signup-header__logo
    = link_to image_tag("/fmarket_logo_red.svg",size: "200x120"), ""
.signup-main
  .signup-contents
    .signup-contents-no-account
      %p アカウントをお持ちでない方はこちら
      .signup-contents-no-account-box
        .signup-contents-no-account-box-inner
          =link_to "/signup/registration", class:"signup-contents-no-account-box-inner__btn" do
            新規会員登録
    .signup-contents-box
      .signup-contents-box-inner
        =link_to "https://www.facebook.com/", class: "signup-contents-box-inner__btn signup-contents-box-inner__btn--facebook" do
          = icon('fab', 'facebook-square', class: "signup-contents-box-inner__btn--icon")
          Facebookでログイン
        =link_to "", class: "signup-contents-box-inner__btn signup-contents-box-inner__btn--google" do
          = icon('fab', 'google', class: "signup-contents-box-inner__btn--icon")
          Googleでログイン
        = form_with class: :tel_class do |form|
          .signup-contents-box-inner__field
            %b お名前  
            %span.red-mini 必須
            = form.text_field :text, class: 'input-field', placeholder: "   例）山田"
            = form.text_field :text, class: 'input-field', placeholder: "   例）彩"
= render partial: "shared/signup-footer"