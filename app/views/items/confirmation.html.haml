.first-items-header
  .first-items-header__logo
    = link_to image_tag("/fmarket_logo_red.svg",size: "200x120"), ""
.items-main
  .items-contents
    .items-contents__message 
      %b 購入内容の確認
    .items-contents__box
      .items-contents__box__buy-item
        .items-contents__box__buy-item__inner
          .items-contents__box__buy-item__inner__image
            = image_tag "#{@item.images.first.url}", alt: 'marcari_toys', class: 'items-contents__box__buy-item__inner__image-src'
          %p.items-contents__box__buy-item__inner__name
            = @item.item_name
          .items-contents__box__buy-item__inner__form
            %p.buy-price
              = "¥#{@item.price}"
              %span.buy-price__sentence
                送料込み
            .buy-point
              .buy-point__sentence
                %p.point-sentence
                  ポイントはありません
            .buy-total-price
              .buy-total-price__sentence
                %p.price-sentence
                  支払い金額
              .buy-total-price__all
                %span.total-price
                  = "¥#{@item.price}"
            = link_to "購入する", purchase_item_path, method: :post, class: "buy-btn"

      .items-contents__box__buy-user
        .items-contents__box__buy-user__inner
          %h1.items-contents__box__buy-user__inner__address
            配送先
          .items-contents__box__buy-user__inner__address-detail
            %p.address-number
              = current_user.address.postal_code
            %p.address-detail
              = "#{current_user.address.prefecture}  " + "#{current_user.address.city}  " + "#{current_user.address.house_number}  " + "#{current_user.address.building_name}  "
            %p.address-name
              = "#{current_user.family_name}  " + "#{current_user.first_name}  "
          .items-contents__box__buy-user__inner__change
            = link_to '#' do
              %a.items-contents__box__buy-user__inner__change__sentence
                変更する >

      .items-contents__box__pay-method
        .items-contents__box__pay-method__inner
          %h1.items-contents__box__pay-method__inner__method
            支払い方法
          %address.items-contents__box__pay-method__inner__credit
            -# %p.credit-number
            %br/
            = "**** - **** - **** - #{current_user.card_number/10000}"
            %br/
            -# %p.credit-date
            = "#{current_user.month}/#{current_user.year}"
          = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1855818912', height: '40', width: '37', class: '.credit-img'
          .items-contents__box__pay-method__inner__change
            = link_to '#' do
              %a.items-contents__box__pay-method__inner__change__sentence
                変更する >
= render partial: "shared/signup-footer"